<div class="person-account">
    <span class="account-info">
        <% if(currentUser && currentUser.isVerified  && !currentUser.deleted){ %>
            <% if(currentUser.google_id){ %>
                <a href="/dashboard" class="finall" style="color: black"> <%= currentUser.google_username.substring(0,8)%></a>

            <% } else if(currentUser.fb_id){ %>
                <a href="/dashboard" class="finall" style="color: black"> <%= currentUser.fb_username.substring(0,8)%></a>

            <% } else { %>
                <a href="/dashboard" class="finall" style="color: black"> <%= currentUser.username.substring(0,8)%></a>
            <% } %>
        <% } else { %>
            <a href="/register_or_login" class="finall"> Sign-in/up</a>
        <% } %>
    </span>
</div>

<% if(successmessage.length || errormessage.length){ %>
    <div class="alert show showAlert">
        <span class="fas fa-exclamation-circle"></span>
        <% if(successmessage.length){ %>
            <span id="success-message-color" class="msg-alert"><%=successmessage%></span>
        <% } else if(errormessage.length) { %>
            <span id="error-message-color" class="msg-alert"><%=errormessage%></span>
        <% } %>
        <div class="close-btn">
          <span class="fas fa-times"></span>
        </div>
    </div>
    <% } else{ %>
        <div class="alert hide">
            <span class="fas fa-exclamation-circle"></span>
            <span class="msg-alert"></span>
            <div class="close-btn">
              <span class="fas fa-times"></span>
            </div>
        </div>
    <% } %>
